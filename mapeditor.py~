import sys, pygame
from unit import Unit

pygame.init()

size = width, height = 800, 800
black = 0, 0, 0

screen = pygame.display.set_mode(size)

unit1 = Unit([10,10], [0,0])

allsprites = pygame.sprite.RenderPlain((unit1))
clock = pygame.time.Clock()


while 1:
    clock.tick(60)
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            sys.exit()

    allsprites.update()
    screen.fill(black)
    allsprites.draw(screen)
    pygame.display.flip()
    
